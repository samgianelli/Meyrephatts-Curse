<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" styleClass="background" stylesheets="@curse.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.view.MainMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="label-header" text="Meyrephætt’s Curse">
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <VBox alignment="BASELINE_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <children>
                  <Button alignment="CENTER" maxHeight="60.0" maxWidth="400.0" minHeight="60.0" mnemonicParsing="false" onAction="#handleNewGame" prefHeight="60.0" text="New Game" textFill="YELLOW" VBox.vgrow="NEVER">
                     <font>
                        <Font name="GothicE" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxHeight="60.0" maxWidth="400.0" minHeight="60.0" mnemonicParsing="false" onAction="#handleLoadGame" prefHeight="60.0" text="Load Game" textFill="YELLOW" VBox.vgrow="NEVER">
                     <font>
                        <Font name="GothicE" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxHeight="60.0" maxWidth="400.0" minHeight="60.0" mnemonicParsing="false" onAction="#handleOptions" prefHeight="60.0" text="Options" textFill="YELLOW" VBox.vgrow="NEVER">
                     <font>
                        <Font name="GothicE" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" maxHeight="60.0" maxWidth="400.0" minHeight="60.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="60.0" text="Exit" textFill="YELLOW" VBox.vgrow="NEVER">
                     <font>
                        <Font name="GothicE" size="36.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
